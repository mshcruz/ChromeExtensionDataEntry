{
  "manifest_version": 3,
  "name": "Chrome Extension Data Entry Demo",
  "version": "0.1.0",
  "description": "Demonstration of how to use Chrome extension to input data to a web form.",
  "icons": {
    "128": "media/logo128.png",
    "48": "media/logo48.png",
    "16": "media/logo16.png"
  },
  "permissions": ["activeTab", "notifications", "scripting", "tabs"],
  "host_permissions": ["http://script.google.com/*", "*://*/*"],
  "action": {
    "default_icon": {
      "128": "media/logo128.png",
      "48": "media/logo48.png",
      "16": "media/logo16.png"
    },
    "default_title": "Chrome Extension Data Entry Demo"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*/*"]
    }
  ]
}
